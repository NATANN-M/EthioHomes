@model List<EthioHomes.Models.Property>
 
<h2>My Listings</h2>


 
@foreach (var property in Model)
{
    <div>
        <h3>@property.Title</h3>
        <p>@property.Location</p>
        <p>Price: @property.Price</p>
        <p>Status: @property.Status</p>
        <p>@property.Description</p>

        <!-- Display property images -->
        <div>
            @if (property.ImagePaths.Count > 0)
            {
                foreach (var imagePath in property.ImagePaths)
                {
                    <img src="/uploads/@imagePath" alt="Property Image" style="width:200px;height:auto;" />
                }
            }
            else
            {
                <p>No images available</p>
            }
        </div>

        <!-- Actions -->
        <a href="/ManageProperty/EditProperty/@property.Id" class="btn btn-primary">Edit</a>

        <!-- Delete Button -->
        <form action="/ManageProperty/DeleteProperty/@property.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>


    </div>
}
