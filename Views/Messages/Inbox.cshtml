@model List<EthioHomes.Models.Message>
@{
    ViewBag.Title = "Inbox";
}

<h2>Your Conversations</h2>

@if (Model.Count > 0)
{
    @foreach (var conversation in Model)
    {
        <div>
            <h3>Property: @conversation.Content</h3>
            <p>With User ID: @(conversation.SenderId == Context.Session.GetInt32("UserId") ? conversation.ReceiverId : conversation.SenderId)</p>
            <a href="/Messages/ViewMessages?propertyId=@conversation.PropertyId" class="btn btn-primary">View Conversation</a>
            <hr />
        </div>
    }
}
else
{
    <p>No conversations available.</p>
}
